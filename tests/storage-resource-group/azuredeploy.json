{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "testResourceGroupName": "INVISIBLEIT-TEST-STORAGE-RG",
        "testLocation": "northeurope",
        "testResourceGroupDeploymentName": "test-storage-deployment"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('testLocation')]",
            "name": "[variables('testResourceGroupName')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('testResourceGroupDeploymentName')]",
            "resourceGroup": "[variables('testResourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('testResourceGroupName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "variables": {
                        "storageAccountName": "[toLower(concat('testst', uniqueString(resourceGroup().id)))]",
                        "location": "[resourceGroup().location]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "name": "[variables('storageAccountName')]",
                            "location": "[variables('location')]",
                            "sku": {
                                "name": "Standard_LRS"
                            },
                            "kind": "StorageV2",
                            "properties": {}
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}